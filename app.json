      "config": {
        "pwa": {
          "icon": "./assets/icons/android-chrome-512x512.png",
          "manifest": {
            "theme_color": "#27AE60",
            "background_color": "#F5E6D3",
            "display": "standalone",
            "scope": "/",
            "start_url": "/",
            "icons": [
              {
                "src": "./assets/icons/android-chrome-192x192.png",
                "sizes": "192x192",
                "type": "image/png"
